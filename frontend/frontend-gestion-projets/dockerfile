FROM node:18-alpine

WORKDIR /app

# Copier les fichiers de d√©pendances
COPY package*.json ./
RUN npm ci

# Copier le code source
COPY . .

# Construire l'application
RUN npm run build

# Installer serve pour servir l'application
RUN npm install -g serve

EXPOSE 4001

# Servir l'application avec support des routes SPA
CMD ["serve", "-s", "build", "-l", "4001", "--single"]